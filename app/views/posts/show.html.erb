<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p id="author">
  <b>By:</b>
  <%= @post.author.email %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished" %>
</p>

<p>
  <%= image_tag @post.image_url.to_s %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <% if comment.approved? %>
      <% comment.content %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= render "comments/form" %>
