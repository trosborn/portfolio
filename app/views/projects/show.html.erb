<p>
  <%= image_tag @project.image_url(:full).to_s %>
</p>

<div class="large 12-columns">
  <div class="large 6-columns">
    <h3 class="lato uppercase"><%= @project.name %></h3>
    <p><%= @project.description %></p>
  </div>
  <div class="large 6-columns">
    <%= link_to "Visit this site", @project.url, class: "button" %>
  </div>
</div>

<%= link_to "Destroy", @project, method: :delete, data: {confirm: "Click to confirm deletion"} %>
<%= link_to 'Edit', edit_project_path(@project) %>
