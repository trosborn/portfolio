<div class="grid">
  <% @projects.each do |project| %>
    <div class="large-4 columns">
      <figure>
        <%= image_tag project.image_url(:preview).to_s %>
        <figcaption><p>
          <%= link_to project.name, project %>
          <%= project.technologies_used %>
        </p></figcaption>
      </figure>
    </div>
  <% end %>
</div>
