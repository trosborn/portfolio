<div class="grid">
  <% @projects.each do |project| %>
    <div class="large-4 columns">
      <a href="projects/<%= project.id %>">
        <figure>
          <%= image_tag project.image_url(:preview).to_s %>
          <figcaption>
            <p class="center fast"><%= project.name %></p>
            <p class="center slow"><%= project.technologies_used %></p>
          </figcaption>
        </figure>
      </a>
      </br>
    </div>
  <% end %>
</div>
